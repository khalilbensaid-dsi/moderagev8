{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block body %}
    <h1>Question index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Texte</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.texte }}</td>
                <td>
                    <a href="{{ path('question_show', {'id': question.id}) }}">show</a>
                    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>
                    <a href="{{ path('option_new', {'id': question.id}) }}">ajouter des options</a>


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
            <tr>
                <td>
                    <a href="{{ path('question_new' ,{'id':question.id} ) }}">Create new</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
